<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF_Mid2_Lab1.MainPage">

        <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label x:Name="Main_Page" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <StackLayout Margin="10" Padding="10" >
            <Entry  x:Name="HomeNumber" />
            <Entry  x:Name="City" />
        </StackLayout>

        <StackLayout Margin="10" Padding="10" Orientation="Horizontal">
            <Button  x:Name="Go"  Clicked="Go_Clicked" />
            <Button  x:Name="Add" />
            <Button  x:Name="Close" />

        </StackLayout>
    </StackLayout>

</ContentPage>
